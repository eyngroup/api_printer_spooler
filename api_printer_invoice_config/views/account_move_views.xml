<odoo>
    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@id='header_left_group']" position="inside">
                <field name="aps_printed" invisible="1" />
                <field name="aps_date" readonly="1" invisible="not aps_printed" />
                <field name="aps_number" readonly="1" invisible="not aps_printed" />
                <field name="aps_serial" readonly="1" invisible="not aps_printed" />
            </xpath>

            <xpath expr="//header/button[@name='action_post']" position="after">
                <button name="button_send_to_printer"
                    string="Printer Fiscal"
                    type="object"
                    invisible="state != 'posted' or aps_printed" />
            </xpath>
        </field>
    </record>
</odoo>