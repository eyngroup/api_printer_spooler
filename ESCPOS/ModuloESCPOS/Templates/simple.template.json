{
  "name": "Simple",
  "description": "Plantilla básica para tickets",
  "sections": [
    {
      "type": "init",
      "commands": ["SetLineSpacing:1"]
    },
    {
      "type": "header",
      "align": "center",
      "items": [
        { "text": "{DocumentName}", "style": "bold" },
        { "text": "Documento: {DocumentNumber}", "style": "normal" },
        { "text": "Fecha: {DocumentDate:dd/MM/yyyy}", "style": "normal" },
        { "type": "line" }
      ]
    },
    {
      "type": "customer",
      "align": "left",
      "items": [
        { "text": "Cliente: {CustomerName}", "style": "normal" },
        { "text": "RIF: {CustomerVat}", "style": "normal" },
        { "text": "Teléfono: {CustomerPhone}", "style": "normal", "condition": "CustomerPhone != null" },
        { "text": "{CustomerAddress}", "style": "normal" },
        { "type": "line" }
      ]
    },
    {
      "type": "items",
      "align": "left",
      "header": {
        "text": "DETALLE DE ITEMS",
        "style": "bold"
      },
      "itemFormat": [
        { "text": "{ItemRef} - {ItemName}", "style": "normal" },
        { "text": "  {ItemComment}", "style": "normal", "condition": "ItemComment != null" },
        { "text": "{ItemQuantity:N0} x {ItemPrice:N2} = {Total:N2}", "style": "normal" }
      ]
    },
    {
      "type": "totals",
      "align": "right",
      "items": [
        { "type": "line" },
        { "text": "Subtotal: {Subtotal:N2}", "style": "normal" },
        { "text": "IVA: {TaxTotal:N2}", "style": "normal", "condition": "TaxTotal > 0" },
        { "text": "Total {DocumentCurrency}: {GrandTotal:N2}", "style": "bold" },
        { "type": "line" }
      ]
    },
    {
      "type": "payments",
      "align": "left",
      "header": {
        "text": "FORMA DE PAGO",
        "style": "bold"
      },
      "itemFormat": [
        { "text": "{PaymentName}: {PaymentAmount:N2}", "style": "normal" }
      ]
    },
    {
      "type": "barcode",
      "align": "center",
      "text": "{DeliveryBarcode}"
    },
    {
      "type": "qr",
      "align": "center",
      "text": "{DocumentNumber}|{CustomerVat}|{GrandTotal:N2}"
    },
    {
      "type": "finish",
      "commands": ["Feed:3", "Cut"]
    }
  ]
}
