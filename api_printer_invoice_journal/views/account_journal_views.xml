<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_journal_form_inherit" model="ir.ui.view">
        <field name="name">account.journal.form.inherit</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="aps_payment_code" invisible="type not in ['bank', 'cash']" />
                <field name="aps_payment_name" invisible="type not in ['bank', 'cash']" />
            </xpath>
            <xpath expr="//page[@name='advanced_settings']" position="after">
                <page string="Fiscal Printer API" name="fiscal_printer_api" invisible="type not in ['sale']">
                    <group>
                        <group string="API Connection">
                            <field name="aps_ip"/>
                            <field name="aps_port"/>
                            <field name="aps_default_payment_code"/>
                            <field name="aps_default_payment_name"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>